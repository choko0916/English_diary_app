<%= form_with model: model do |form| %>
  <div class="field pt-6">
    <%= form.label :japanese_diary, "日記（日本語）", class:"bold" %><br>
    <%= form.text_area :japanese_diary, class:"w-4/5 h-40 rounded", placeholder: "今日は７時に起きた。" %>
  </div> 
  <div class="field pb-3">
    <%= form.label :english_diary, "日記（英語）", class:"mr-2" %><span class="font-bold text-xs p-0.5 text-rose-500 bg-rose-100">必須</span><br>
    <%= form.text_area :english_diary, class:"w-4/5 h-40 rounded", placeholder: "I got up at seven this morning." %>
  </div>
  <div class="py-6 border-b">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="inline w-6 h-6">
      <path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5h-6.75v6.75a.75.75 0 01-1.5 0v-6.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd" />
    </svg>
    <%= link_to_add_association "単語、フレーズを追加する", form, :words, data: { association_insertion_method: "append" }, class:"inline ml-1 px-3 py-2 bg-gray-300 hover:bg-gray-400 rounded" %>       
    <%= form.fields_for :words do |word| %>
      <%= render "diaries/word_fields", f: word %>
    <% end %>
  </div>
  <div class="field py-6 border-b">
    <%= form.label :photo, "写真", class:"bold" %><br>
    <%= form.file_field :photo, class:"input_field" %>
  </div>
  <div class="field flex py-6 border-b">
    <%= form.label :private_flag, "非公開にする", class:"pr-3" %>
    <%= form.check_box :private_flag %>
  </div>
  <div class="field pt-6 text-end">
    <%= form.submit "登録", class: "submit" %>
  </div>
<% end %>
