<div class="bg-white shadow mx-auto sm:my-8 p-6 sm:w-8/12 sm:rounded">
  <h1 class="font-semibold">日記編集</h1>
  <%= form_with model: @diary do |f| %>
    <div class="field pt-6">
      <%= f.label :japanese_diary, "日記（日本語）", class:"bold" %><br>
      <%= f.text_area :japanese_diary, class:"sm:w-4/5 w-full h-40 rounded", placeholder: "日本語で日記を入力" %>
    </div> 
    <div class="field pb-6 border-b">
      <%= f.label :english_diary, "日記（英語）", class:"bold" %><br>
      <%= f.text_area :english_diary, class:"sm:w-4/5 w-full h-40 rounded", placeholder: "英語で日記を入力" %>
    </div>
    <div class="field py-6 border-b">
      <%= f.label :photo, "写真", class:"bold" %><br>
      <%= f.file_field :photo, class:"input_field" %>
    </div>
    <div class="field flex py-6 border-b">
      <%= f.label :private_flag, "非公開にする", class:"pr-3" %><br>
      <%= f.check_box :private_flag, class:"input_field" %>
    </div>
    <div class="field py-6 text-end">
      <%= f.submit "編集", class: "submit" %>
    </div>
  <% end %>
</div>
