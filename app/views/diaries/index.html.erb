<div class="my-8 mb-24 index_container">
  <div class="min-h-full">
    <% @diaries.each do |diary| %>
      <div class="bg-white shadow mx-auto mt-3 mb-3 p-8 sm:w-8/12 sm:rounded">
        <div class="container_top">
          <div class="created_at">
            <%= diary.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
          </div>
          <div class="private_flag">
            <% if diary.private_flag == true %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path fill-rule="evenodd" d="M3.28 2.22a.75.75 0 00-1.06 1.06l14.5 14.5a.75.75 0 101.06-1.06l-1.745-1.745a10.029 10.029 0 003.3-4.38 1.651 1.651 0 000-1.185A10.004 10.004 0 009.999 3a9.956 9.956 0 00-4.744 1.194L3.28 2.22zM7.752 6.69l1.092 1.092a2.5 2.5 0 013.374 3.373l1.091 1.092a4 4 0 00-5.557-5.557z" clip-rule="evenodd" />
                <path d="M10.748 13.93l2.523 2.523a9.987 9.987 0 01-3.27.547c-4.258 0-7.894-2.66-9.337-6.41a1.651 1.651 0 010-1.186A10.007 10.007 0 012.839 6.02L6.07 9.252a4 4 0 004.678 4.678z" />
              </svg>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6.5 6.326a6.52 6.52 0 01-1.5.174 6.487 6.487 0 01-5.011-2.36l.49-.98a.423.423 0 01.614-.164l.294.196a.992.992 0 001.491-1.139l-.197-.593a.252.252 0 01.126-.304l1.973-.987a.938.938 0 00.361-1.359.375.375 0 01.239-.576l.125-.025A2.421 2.421 0 0012.327 6.6l.05-.149a1 1 0 00-.242-1.023l-1.489-1.489a.5.5 0 01-.146-.353v-.067a6.5 6.5 0 015.392 9.23 1.398 1.398 0 00-.68-.244l-.566-.566a1.5 1.5 0 00-1.06-.439h-.172a1.5 1.5 0 00-1.06.44l-.593.592a.501.501 0 01-.13.093l-1.578.79a1 1 0 00-.553.894v.191a1 1 0 001 1h.5a.5.5 0 01.5.5v.326z" clip-rule="evenodd" />
              </svg>                        
            <% end %>
          </div>
        </div>
        <div class="photo mt-3">
          <% if diary.photo? %>
            <%= image_tag diary.photo.url %>
          <% end %>
        </div>
        <div class="diary">
          <div class="english_diary">
            <p class="inline text-slate-600 px-1 py-0.5 bg-sky-200 rounded-full font-semibold">英</p>
            <p class="mt-1"><%= diary.english_diary %></p>
          </div>
          <% if diary.japanese_diary? %>
            <div class="japanese_diary">
              <p class="inline text-slate-600 px-1 py-0.5 bg-red-200 rounded-full bold font-semibold">日</p>
              <p class="mt-1"><%= diary.japanese_diary %></p>
            </div>
          <% end %>
        </div>
        <div class="link text-end">
          <%= link_to "編集", edit_diary_path(diary.id) %>
          <%= button_to "削除", diary_path(diary.id), form: { data: { turbo_confirm: "本当に削除しますか？" } }, method: :delete, class:"hover:font-bold" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
